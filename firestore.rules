rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================================================
    // HELPER FUNCTIONS - Role-Based Access Control (RBAC)
    // ============================================================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isStudent() {
      return isAuthenticated() && getUserData().role == 'student';
    }
    
    function isTeacher() {
      return isAuthenticated() && getUserData().role == 'teacher';
    }
    
    function isPrincipal() {
      return isAuthenticated() && getUserData().isPrincipal == true;
    }
    
    function isTeacherOrPrincipal() {
      return isTeacher() || isPrincipal();
    }
    
    function isInClassroom(classroomId) {
      return isAuthenticated() && 
             request.auth.uid in get(/databases/$(database)/documents/classrooms/$(classroomId)).data.studentIds;
    }
    
    function isClassroomTeacher(classroomId) {
      return isAuthenticated() && 
             request.auth.uid == get(/databases/$(database)/documents/classrooms/$(classroomId)).data.teacherId;
    }
    
    function isInSchool(schoolId) {
      return isAuthenticated() && getUserData().schoolId == schoolId;
    }
    
    function isSchoolPrincipal(schoolId) {
      return isPrincipal() && 
             get(/databases/$(database)/documents/schools/$(schoolId)).data.principalId == request.auth.uid;
    }
    
    // ============================================================================
    // USERS COLLECTION
    // ============================================================================
    match /users/{userId} {
      // Users can read their own data
      allow read: if isOwner(userId);
      
      // All authenticated users can read basic user data for leaderboards
      // This allows students to see other students' names, XP, and avatars
      allow read: if isAuthenticated();
      
      // Teachers can read students in their classrooms
      allow read: if isTeacher() && 
                     exists(/databases/$(database)/documents/classrooms/$(resource.data.classroomId)) &&
                     isClassroomTeacher(resource.data.classroomId);
      
      // Principals can read users in their school
      allow read: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // Users can create their own account
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own data (except role and isPrincipal)
      allow update: if isOwner(userId) && 
                       !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'isPrincipal']);
      
      // Teachers/Principals can update student data in their scope
      allow update: if (isTeacher() && isClassroomTeacher(resource.data.classroomId)) ||
                       (isPrincipal() && isInSchool(resource.data.schoolId));
      
      // Users can delete their own account
      allow delete: if isOwner(userId);
      
      // Bookmarks subcollection
      match /bookmarks/{bookmarkId} {
        allow read, write: if isOwner(userId);
      }
      
      // Badge unlocks subcollection
      match /badge_unlocks/{badgeId} {
        allow read: if isOwner(userId) || isTeacher() || isPrincipal();
        allow write: if isOwner(userId);
      }
    }
    
    // Classrooms Collection
    match /classrooms/{classroomId} {
      // Allow read for everyone (including during signup to search by classroom code)
      // Classroom data is not sensitive - it's just names and codes
      allow read: if true;
      
      // Allow creation if user is authenticated and setting themselves as teacher
      allow create: if isSignedIn() && 
        request.resource.data.teacherId == request.auth.uid;
      
      allow update: if isSignedIn() && (
        // Teacher or principal can update
        resource.data.teacherId == request.auth.uid ||
        isPrincipal() ||
        // Student can join by adding themselves to pendingStudentIds or studentIds
        (isStudent() && (
          request.auth.uid in request.resource.data.pendingStudentIds ||
          request.auth.uid in request.resource.data.studentIds
        ))
      );
      
      allow delete: if isSignedIn() && (
        resource.data.teacherId == request.auth.uid || 
        isPrincipal()
      );
    }
    
    // Realms Collection (Read-only for students, writable by admins)
    match /realms/{realmId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via console
    }
    
    // Levels Collection (Read-only for students, writable by admins)
    match /levels/{levelId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via console
    }
    
    // Quizzes Collection (Read-only for students, writable by admins)
    match /quizzes/{quizId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via console
    }
    
    // Progress Collection
    // Progress IDs are formatted as: userId__contentId (e.g., "abc123__realm_copyright_level_1" or "abc123__game_quiz_master")
    match /progress/{progressId} {
      // Extract userId from progressId (split by __ and take first part)
      function getProgressUserId() {
        return progressId.split('__')[0];
      }
      
      // Allow read queries and individual document reads if signed in
      // For queries: Allow if querying by own userId or if teacher/principal
      // For gets: Allow if it's your own progress or if teacher/principal
      allow read, list: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        getProgressUserId() == request.auth.uid ||
        isTeacher() || 
        isPrincipal()
      );
      
      // Allow create if signed in and creating your own progress
      allow create: if isSignedIn() && 
        request.resource.data.userId == request.auth.uid;
      
      // Allow update/write if it's your progress or you're a teacher/principal  
      allow update, write: if isSignedIn() && (
        request.resource.data.userId == request.auth.uid ||
        getProgressUserId() == request.auth.uid ||
        isTeacher() || 
        isPrincipal()
      );
      
      // Allow delete if it's your own progress
      allow delete: if isSignedIn() && 
        getProgressUserId() == request.auth.uid;
      
      // Games subcollection - allow users to read/write their own game progress
      match /games/{gameId} {
        allow read, write: if isSignedIn() && 
          request.auth.uid == progressId;
      }
    }
    
    // Badges Collection (Read-only)
    match /badges/{badgeId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via console
    }
    
    // Certificates Collection
    match /certificates/{certificateId} {
      allow read: if isSignedIn() && (
        isOwner(resource.data.userId) || 
        isTeacher() || 
        isPrincipal()
      );
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      allow write: if isPrincipal();
    }
    
    // Leaderboards Collection
    match /leaderboards/{entryId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Users can update their own scores
    }
    
    // ============================================================================
    // ANNOUNCEMENTS COLLECTION
    // ============================================================================
    match /announcements/{announcementId} {
      // Students can read announcements in their classrooms
      allow read: if isStudent() && isInClassroom(resource.data.classroomId);
      
      // Teachers can read their own announcements
      allow read: if isTeacher() && isClassroomTeacher(resource.data.classroomId);
      
      // Principals can read announcements in their school
      allow read: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // Only teachers can create announcements
      allow create: if isTeacher() && isClassroomTeacher(request.resource.data.classroomId);
      
      // Principals can also create announcements
      allow create: if isPrincipal() && isInSchool(request.resource.data.schoolId);
      
      // Only creator or principal can update/delete
      allow update, delete: if isOwner(resource.data.authorId) || 
                               (isPrincipal() && isInSchool(resource.data.schoolId));
    }
    
    // News Collection (Read-only for students)
    match /news/{newsId} {
      allow read: if isSignedIn();
      allow write: if isPrincipal();
    }
    
    // Schools Collection
    match /schools/{schoolId} {
      // Allow read for everyone (including during signup to fetch school info)
      allow read: if true;
      allow create: if request.auth != null;
      // Allow update if:
      // - User is the principal of this school, OR
      // - User is a teacher who is already in this school's teacherIds (for adding classrooms)
      // - User is a teacher who is being added to teacherIds (for joining school)
      allow update: if isSignedIn() && (
        (isPrincipal() && get(/databases/$(database)/documents/schools/$(schoolId)).data.principalId == request.auth.uid) ||
        (isTeacher() && (
          request.auth.uid in resource.data.teacherIds ||
          request.auth.uid in request.resource.data.teacherIds
        ))
      );
      allow delete: if false; // Schools cannot be deleted, only deactivated
    }
    
    // Join Requests Collection (for students)
    match /join_requests/{requestId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.studentId ||
        isTeacher() ||
        isPrincipal()
      );
      allow create: if isSignedIn() && isStudent() && 
        request.resource.data.studentId == request.auth.uid;
      allow update: if isTeacher() || isPrincipal();
      allow delete: if request.auth.uid == resource.data.studentId || isTeacher();
    }
    
    // Teacher Join Requests Collection (for teachers joining schools)
    match /teacher_join_requests/{requestId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.teacherId ||
        isPrincipal()
      );
      allow create: if isSignedIn() && 
        request.resource.data.teacherId == request.auth.uid;
      allow update: if isPrincipal();
      allow delete: if isPrincipal();
    }
    
    // ============================================================================
    // ASSIGNMENTS COLLECTION
    // ============================================================================
    match /assignments/{assignmentId} {
      // Students can read assignments in their classrooms
      allow read: if isStudent() && isInClassroom(resource.data.classroomId);
      
      // Teachers can read their own assignments
      allow read: if isTeacher() && isClassroomTeacher(resource.data.classroomId);
      
      // Principals can read assignments in their school
      allow read: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // Only teachers can create assignments
      allow create: if isTeacher() && isClassroomTeacher(request.resource.data.classroomId);
      
      // Principals can also create assignments
      allow create: if isPrincipal() && isInSchool(request.resource.data.schoolId);
      
      // Only creator or principal can update/delete
      allow update, delete: if isOwner(resource.data.createdBy) || 
                               (isPrincipal() && isInSchool(resource.data.schoolId));
    }
    
    // ============================================================================
    // ASSIGNMENT SUBMISSIONS COLLECTION
    // ============================================================================
    match /assignment_submissions/{submissionId} {
      // Students can read their own submissions
      allow read: if isStudent() && isOwner(resource.data.studentId);
      
      // Teachers can read submissions for their assignments
      allow read: if isTeacher() && isClassroomTeacher(resource.data.classroomId);
      
      // Principals can read submissions in their school
      allow read: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // Students can create their own submissions
      allow create: if isStudent() && 
                       request.resource.data.studentId == request.auth.uid;
      
      // Students can update their own submissions (before grading)
      allow update: if isStudent() && 
                       isOwner(resource.data.studentId) && 
                       resource.data.gradedAt == null;
      
      // Teachers can update (grade) submissions
      allow update: if isTeacher() && isClassroomTeacher(resource.data.classroomId);
      
      // Principals can update submissions
      allow update: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // Submissions cannot be deleted
      allow delete: if false;
    }
    
    // Certificates Collection (Cloud Functions only)
    match /certificates/{certificateId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isTeacher() ||
        isPrincipal()
      );
      allow write: if false; // Only Cloud Functions can create/update certificates
    }
    
    // Daily Challenges Collection
    match /daily_challenges/{challengeId} {
      allow read: if isSignedIn();
      allow write: if false; // Only Cloud Functions can create challenges
    }
    
    // Daily Challenge Attempts Collection
    match /daily_challenge_attempts/{attemptId} {
      allow read: if isSignedIn() && (
        request.auth.uid == resource.data.userId ||
        isTeacher() ||
        isPrincipal()
      );
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Attempts are immutable
    }
    
    // ============================================================================
    // REPORTS COLLECTION - Content Moderation
    // ============================================================================
    match /reports/{reportId} {
      // Users can read their own reports
      allow read: if isOwner(resource.data.reporterId);
      
      // Teachers can read reports about their content
      allow read: if isTeacher() && isOwner(resource.data.contentCreatorId);
      
      // Principals can read reports in their school
      allow read: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // Any authenticated user can create reports
      allow create: if isAuthenticated() && 
                       request.resource.data.reporterId == request.auth.uid;
      
      // Teachers and principals can update (resolve) reports
      allow update: if isTeacherOrPrincipal();
      
      // Reports cannot be deleted
      allow delete: if false;
    }
    
    // ============================================================================
    // FLAGGED CONTENT COLLECTION - Automatic Content Moderation
    // ============================================================================
    match /flagged_content/{flagId} {
      // Teachers can read flags for their content
      allow read: if isTeacher() && isOwner(resource.data.creatorId);
      
      // Principals can read all flags in their school
      allow read: if isPrincipal() && isInSchool(resource.data.schoolId);
      
      // System can create flags (via Cloud Functions)
      allow create: if false; // Only Cloud Functions
      
      // Teachers and principals can update (review) flags
      allow update: if isTeacherOrPrincipal();
      
      // Flags cannot be deleted
      allow delete: if false;
    }
    
    // Feedback Collection
    match /feedback/{feedbackId} {
      allow read: if isPrincipal() || request.auth.uid == resource.data.userId;
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isPrincipal(); // Only principals can respond
      allow delete: if false; // Feedback cannot be deleted
    }
    
    // Leaderboard Cache Collection
    match /leaderboard_cache/{cacheId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn(); // Allow client-side updates now
    }
    
    // Badges Collection (duplicate removed - see above)
    
    // ============================================================================
    // CHAT COLLECTION - Simplified Education-Focused Communication
    // Only teacher-to-student one-on-one messaging allowed
    // No student-to-student messaging, no group chats
    // ============================================================================
    match /chats/{chatId} {
      // Helper function to check if user is participant in this chat
      function isChatParticipant() {
        return request.auth.uid in resource.data.participants;
      }
      
      // Allow reading chats if user is participant
      // For get operations, allow if document doesn't exist (returns null) or user is participant
      allow get: if isAuthenticated() && (resource == null || isChatParticipant());
      // For list operations, only return chats where user is participant
      allow list: if isAuthenticated() && isChatParticipant();
      
      // Both teachers and students can create chats (teacher-to-student only)
      allow create: if (isTeacher() || isStudent()) && 
                       request.resource.data.type == 'personal' &&
                       request.auth.uid in request.resource.data.participants &&
                       request.resource.data.participants.size() == 2;
      
      // Participants can update (for read receipts, last message)
      allow update: if isAuthenticated() && isChatParticipant();
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read/write if user can access the parent chat
        // This relies on the parent chat permissions being checked first
        allow read: if isAuthenticated();
        
        // Participants can send messages
        allow create: if isAuthenticated() && 
                         request.resource.data.senderId == request.auth.uid;
        
        // Participants can update (for read receipts)
        allow update: if isAuthenticated();
        
        // Messages cannot be deleted
        allow delete: if false;
      }
    }
    
    // ============================================================================
    // NOTIFICATIONS COLLECTION
    // ============================================================================
    match /notifications/{notificationId} {
      // Users can read their own notifications (using toUserId field)
      allow read: if isAuthenticated() && request.auth.uid == resource.data.toUserId;
      
      // System and authorized users can create notifications
      allow create: if isAuthenticated();
      
      // Users can update their own notifications (mark as read)
      allow update: if isAuthenticated() && request.auth.uid == resource.data.toUserId;
      
      // Users can delete their own notifications
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.toUserId;
    }
    
    // ============================================================================
    // MODERATION SYSTEM
    // ============================================================================
    
    // Profanity Words Collection
    match /profanity_words/{doc} {
      // All authenticated users can read the profanity list
      allow read: if isAuthenticated();
      
      // Only admins can update (via admin panel or console)
      allow write: if false; // Admins use console or admin panel with elevated permissions
    }
    
    // Moderation Reports Collection
    match /moderation_reports/{reportId} {
      // Principals can read reports
      allow read: if isPrincipal();
      
      // Admins can read reports (via custom claims)
      allow read: if isAuthenticated() && request.auth.token.isAdmin == true;
      
      // System can create reports (any authenticated user for now)
      allow create: if isAuthenticated();
      
      // Principals can update reports (review, resolve)
      allow update: if isPrincipal();
      
      // Admins can update reports (via custom claims)
      allow update: if isAuthenticated() && request.auth.token.isAdmin == true;
      
      // Reports cannot be deleted
      allow delete: if false;
    }
    
    // ============================================================================
    // CMS COLLECTIONS - Content Management System
    // ============================================================================
    
    // Content Metadata Collection - Tracks versions of content in Storage
    match /content_metadata/{contentType} {
      // All users can read content metadata (to check for updates)
      allow read: if true;
      
      // Only admins can write content metadata
      allow write: if isAuthenticated() && request.auth.token.isAdmin == true;
    }
    
    // App Config Collection - Dynamic app configuration
    match /app_config/{doc} {
      // All users can read app config
      allow read: if true;
      
      // Only admins can write app config
      allow write: if isAuthenticated() && request.auth.token.isAdmin == true;
    }
    
    // Admin Audit Log Collection - Tracks all admin actions
    match /admin_audit_log/{logId} {
      // Only admins can read audit logs
      allow read: if isAuthenticated() && request.auth.token.isAdmin == true;
      
      // Only admins can write audit logs
      allow write: if isAuthenticated() && request.auth.token.isAdmin == true;
    }
    
    // Content Data Collection - Actual content stored in Firestore (no Storage needed)
    match /content_data/{contentType}/{contentId} {
      // All users can read content
      allow read: if true;
      
      // Only admins can write content
      allow write: if isAuthenticated() && request.auth.token.isAdmin == true;
    }
    
    // ============================================================================
    // DATA PRIVACY AND ACCESS CONTROL
    // ============================================================================
    
    // User Data Export Collection (for GDPR compliance)
    match /data_exports/{exportId} {
      // Users can only read their own data exports
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Users can request their own data export
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // System updates export status
      allow update: if false; // Only Cloud Functions
      
      // Users can delete their export after download
      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Account Deletion Requests Collection
    match /deletion_requests/{requestId} {
      // Users can read their own deletion requests
      allow read: if isAuthenticated() && isOwner(resource.data.userId);
      
      // Users can create deletion requests
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      
      // System processes deletion requests
      allow update: if false; // Only Cloud Functions
      
      // Deletion requests cannot be deleted
      allow delete: if false;
    }
  }
}